<%- include('../partials/header') %>
<h2>Danh sách Sản phẩm</h2>
<a href="/products/new" class="btn btn-primary mb-3">Thêm mới</a>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Tên sản phẩm</th>
      <th>Số lượng</th>
      <th>Giá</th>
      <th>Nhà cung cấp</th>
      <th>Hành động</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => { %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %> đ</td>
        <td><%= product.supplier ? product.supplier.name : "Chưa có" %></td>
        <td>
          <a href="/products/<%= product._id %>/edit" class="btn btn-warning btn-sm">Sửa</a>
          <form action="/products/<%= product._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>
