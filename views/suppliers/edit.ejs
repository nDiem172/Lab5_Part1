<%- include('../partials/header', { title: 'Sửa Nhà Cung Cấp' }) %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="css/style.css">
<div class="container mt-4">
  <h2>Sửa Nhà Cung Cấp</h2>
  <form action="/suppliers/<%= supplier._id %>?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">Tên nhà cung cấp</label>
      <input type="text" class="form-control" id="name" name="name" value="<%= supplier.name %>" required>
    </div>
    <div class="mb-3">
      <label for="address" class="form-label">Địa chỉ</label>
      <input type="text" class="form-control" id="address" name="address" value="<%= supplier.address %>" required>
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">Điện thoại</label>
      <input type="text" class="form-control" id="phone" name="phone" value="<%= supplier.phone %>" required>
    </div>
    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a href="/suppliers" class="btn btn-secondary">Hủy</a>
  </form>
</div>

<%- include('../partials/footer') %>
