<%- include('../partials/header') %>
<h2>Danh sách Nhà cung cấp</h2>
<a href="/suppliers/new" class="btn btn-primary mb-3">Thêm mới</a>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Tên</th>
      <th>Địa chỉ</th>
      <th>Số điện thoại</th>
      <th>Hành động</th>
    </tr>
  </thead>
  <tbody>
    <% suppliers.forEach(supplier => { %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.phone %></td>
        <td>
          <a href="/suppliers/<%= supplier._id %>/edit" class="btn btn-warning btn-sm">Sửa</a>
          <form action="/suppliers/<%= supplier._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>
